<?xml version="1.0" encoding="utf-8"?>
<extension type="component" method="upgrade" version="5.0">
    <name>com_events</name>
    <title>Events Manager</title>
    <creationDate>2025-08-01</creationDate>
    <author>Codex</author>
    <files folder="administrator/components/com_events">
        <folder>src</folder>
        <folder>forms</folder>
        <folder>sql</folder>
        <filename>com_events.xml</filename>
    </files>
    <files folder="components/com_events" client="site">
        <folder>src</folder>
        <folder>media</folder>
        <folder>tmpl</folder>
    </files>
    <languages>
        <language tag="en-GB">administrator/language/en-GB/en-GB.com_events.ini</language>
        <language tag="de-DE">administrator/language/de-DE/de-DE.com_events.ini</language>
        <language tag="en-GB" client="site">language/en-GB/en-GB.com_events.ini</language>
        <language tag="de-DE" client="site">language/de-DE/de-DE.com_events.ini</language>
    </languages>
    <install>
        <sql>
            <file driver="mysql" charset="utf8">administrator/components/com_events/sql/install.mysql.utf8.sql</file>
        </sql>
    </install>
    <uninstall>
        <sql>
            <file driver="mysql" charset="utf8">administrator/components/com_events/sql/uninstall.mysql.utf8.sql</file>
        </sql>
    </uninstall>
</extension>
